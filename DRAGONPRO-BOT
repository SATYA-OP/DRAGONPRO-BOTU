


_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $LEGEND-LX_REPO == "DRAGONBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $LEGEND-LX_REPO == "DRAGONBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    elif [[ $LEGEND-LX_REPO =~ $regex ]]
    then
        if [[ $LEGEND-LX_REPO_BRANCH ]]
        then
            echo "${LEGEND-LX_REPO}/archive/${LEGEND-LX_REPO_BRANCH}.zip"
        else
            echo "${LEGEND-LX_REPO}/archive/DRAGONBOT.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0xFR0VORC1MWC9QWVRIT05VU0VSQk9UL2FyY2hpdmUvbWFpbi56aXA" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="DRAGONBOT.zip"
    echo "  ğ“†©ğŸ”± Downloading Pro DragonBot-V3.0 Source Code...ğŸ”±ğ“†ª"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    DRAGONPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "ğŸ’¥ Download Complete Now Installing ğŸ’¥"
    echo "  âœ¨ğŸ’« INSTALLING ğ–¤ğ“†©Â©Lá´‡É¢á´‡É´á´…x-Proâ„¢ğ“Š‰ âœ¨ğŸ’«"
    rm -rf "$zippath"
    sleep 5
    cd $DRAGONPATH
    echo "    ğŸÑ•Ï„Î±ÑÏ„Î¹Ğ¸g Ñ•Ğ¼Î¿Î¿Ï„Ğ½Ñ”Ñ•Ï„ Dragonğ•­Ã¸ğ–™ V2.0ğŸ     "
    echo " ğŸ¤ŸğŸ» NOW WAIT 1 MIN INSTALLING ALL PLUGIN ğŸ¤ŸğŸ» "

